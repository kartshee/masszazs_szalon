<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/masszazs_tipus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masszázs típusa"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/selected_datetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nincs kiválasztva időpont"
        android:textSize="18sp"
        android:textColor="#555555"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/masszazs_tipus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/date_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dátum kiválasztása"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#388E3C"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/selected_datetime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/time_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Időpont kiválasztása"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#388E3C"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/date_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Foglalás megerősítése"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2E7D32"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/time_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
